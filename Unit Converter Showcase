<body class="min-h-screen p-6 sm:p-10 bg-slate-50">

    <div class="container mx-auto">
        <!-- Header -->
        <header class="text-center mb-10">
            <h1 class="text-4xl font-extrabold text-hf-dark mb-2 tracking-tight">
                ðŸ§® Simple Unit Converter
            </h1>
            <p class="text-lg text-gray-600">
                Convert common units and see how you can contribute!
            </p>
        </header>

        <!-- Contribution Guidance -->
        <div class="bg-hf-orange/10 border-l-4 border-hf-orange p-4 rounded-lg mb-8 shadow-inner">
            <p class="text-gray-700 font-medium">
                âœ¨ **Hacktoberfest Contribution Point:** Add a new unit conversion object to the `conversionUnits` array below! Define the `category`, `from` unit, `to` unit, and the `factor`.
            </p>
        </div>
        
        <!-- Converter Controls -->
        <div class="bg-white p-6 sm:p-8 rounded-xl shadow-2xl border border-gray-100">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
                <!-- Unit Selector -->
                <div>
                    <label for="unit-select" class="block text-sm font-medium text-gray-700 mb-2">Select Conversion Type</label>
                    <select id="unit-select" class="mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-hf-orange focus:border-hf-orange sm:text-sm rounded-md shadow-sm">
                        <!-- Options generated by JS -->
                    </select>
                </div>
                
                <!-- Input Value -->
                <div>
                    <label for="input-value" class="block text-sm font-medium text-gray-700 mb-2" id="input-label">Input Value (Unit 1)</label>
                    <input type="number" id="input-value" value="1" min="0" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-hf-orange focus:border-hf-orange sm:text-sm" placeholder="Enter value">
                </div>

                <!-- Output Result -->
                <div>
                    <label for="output-result" class="block text-sm font-medium text-gray-700 mb-2" id="output-label">Result (Unit 2)</label>
                    <input type="text" id="output-result" readonly class="mt-1 block w-full border border-gray-300 rounded-md shadow-inner py-2 px-3 bg-gray-50 sm:text-sm" value="N/A">
                </div>
            </div>

            <!-- Conversion Details -->
            <p class="text-sm text-gray-500 mt-4 text-center" id="conversion-details">
                Select a unit and enter a value to see the result.
            </p>
        </div>
    </div>


    <script>
        // --- HACKTOBERFEST CONTRIBUTION POINT: ADD NEW CONVERSIONS HERE ---
        const conversionUnits = [
            // Example: Length
            { category: "Length", from: "Meters (m)", to: "Feet (ft)", factor: 3.28084 },
            { category: "Length", from: "Kilometers (km)", to: "Miles (mi)", factor: 0.621371 },
            
            // Example: Mass
            { category: "Mass", from: "Kilograms (kg)", to: "Pounds (lbs)", factor: 2.20462 },
            { category: "Mass", from: "Grams (g)", to: "Ounces (oz)", factor: 0.035274 },

            // Example: Temperature (Note: Temperature conversions are more complex and require a function,
            // but for simple factor-based contributions, we focus on linear conversions like the above.)
            
            // Add your new conversion here! Example:
            // { category: "Volume", from: "Liters (L)", to: "Gallons (gal)", factor: 0.264172 },
        ];
        // -----------------------------------------------------------

        const unitSelect = document.getElementById('unit-select');
        const inputValue = document.getElementById('input-value');
        const outputResult = document.getElementById('output-result');
        const inputLabel = document.getElementById('input-label');
        const outputLabel = document.getElementById('output-label');
        const conversionDetails = document.getElementById('conversion-details');

        let currentConversionIndex = 0;

        /**
         * Populates the dropdown menu with available conversion categories.
         */
        function populateUnitSelector() {
            unitSelect.innerHTML = '';
            conversionUnits.forEach((unit, index) => {
                const option = document.createElement('option');
                option.value = index;
                option.textContent = `${unit.category}: ${unit.from} to ${unit.to}`;
                unitSelect.appendChild(option);
            });
            // Set initial selected index
            unitSelect.value = currentConversionIndex;
        }

        /**
         * Performs the conversion and updates the display elements.
         */
        function performConversion() {
            if (conversionUnits.length === 0) {
                outputResult.value = 'No units available';
                return;
            }

            const index = parseInt(unitSelect.value);
            const unit = conversionUnits[index];
            const value = parseFloat(inputValue.value);

            // Update labels
            inputLabel.textContent = `Input Value (${unit.from})`;
            outputLabel.textContent = `Result (${unit.to})`;

            // Update details
            conversionDetails.textContent = `Conversion Factor: 1 ${unit.from} = ${unit.factor.toFixed(6)} ${unit.to}`;


            if (isNaN(value) || value < 0) {
                outputResult.value = 'Invalid Input';
                return;
            }

            // Perform the conversion
            const result = value * unit.factor;
            outputResult.value = result.toFixed(4);
        }

        /**
         * Event handler for changing the selected unit.
         */
        function handleUnitChange(event) {
            currentConversionIndex = parseInt(event.target.value);
            performConversion();
        }

        // Add event listeners
        unitSelect.addEventListener('change', handleUnitChange);
        inputValue.addEventListener('input', performConversion);
        
        // Initial setup
        window.onload = () => {
            if (conversionUnits.length > 0) {
                populateUnitSelector();
                performConversion();
            } else {
                conversionDetails.textContent = 'Please add conversion units to the array to begin!';
            }
        };
    </script>
</body>
</html>
